{
  "name": "litegui.ts",
  "version": "1.0.5",
  "description": "A TypeScript library to create webapps with a desktop look-alike user interface",
  "main": "dist/litegui.js",
  "types": "dist/litegui.d.ts",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/AlvaroEstradaDev/litegui.ts.git"
  },
  "bugs": {
    "url": "https://github.com/AlvaroEstradaDev/litegui.ts/issues"
  },
  "homepage": "https://github.com/AlvaroEstradaDev/litegui.ts#readme",
  "keywords": [
    "typescript",
    "javascript",
    "user interface",
    "gui",
    "ui"
  ],
  "author": "Alvaro Estrada <alvaro.jesus@estradajai.me>",
  "engines": {
    "node": ">=24.13.0"
  },
  "files": [
    "dist/*",
    "dist/**/*"
  ],
  "exports": {
    ".": {
      "types": "./dist/litegui.d.ts",
      "default": "./dist/litegui.js"
    },
    "./src": "./src/"
  },
  "scripts": {
    "build": "webpack --config webpack.build.config.ts",
    "dev": "webpack serve --config webpack.dev.config.ts",
    "docs": "npx typedoc src/",
    "lint": "eslint . --cache",
    "prepare": "husky",
    "test": "jest"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@simonwep/pickr": "^1.9.1",
    "@types/jest": "30.0.0",
    "@types/node": "25.2.2",
    "canvas": "^3.2.1",
    "clean-webpack-plugin": "4.0.0",
    "copy-webpack-plugin": "13.0.1",
    "css-loader": "7.1.3",
    "css-minimizer-webpack-plugin": "7.0.4",
    "eslint": "9.39.2",
    "eslint-webpack-plugin": "5.0.2",
    "html-webpack-plugin": "5.6.6",
    "husky": "^9.1.7",
    "jest": "30.2.0",
    "jest-environment-jsdom": "30.2.0",
    "lint-staged": "16.2.7",
    "mini-css-extract-plugin": "2.10.0",
    "puppeteer": "24.37.2",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "5.3.16",
    "ts-jest": "29.4.6",
    "ts-loader": "9.5.4",
    "ts-node": "10.9.2",
    "tslib": "2.8.1",
    "typedoc": "^0.28.16",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.30.1",
    "webpack": "5.105.0",
    "webpack-cli": "6.0.1",
    "webpack-dev-server": "5.2.3",
    "webpack-remove-empty-scripts": "1.1.1"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix"
  }
}
